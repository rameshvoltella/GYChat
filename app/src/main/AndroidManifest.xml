<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.st1ch.xmppclient">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ErrorDialog"
            android:label=""
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".activity.ConnectToActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".VPN.activity.VPNActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".chat.activity.ChatActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".user.activity.LoginActivity"
            android:label="@string/app_name" />
        <activity android:name=".activity.ContactListActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            />
        <activity android:name=".contacts.list.activity.ContactsListActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            />

        <service
            android:name=".service.ServiceConnect"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>
